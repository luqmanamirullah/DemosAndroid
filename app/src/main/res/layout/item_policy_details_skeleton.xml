<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    app:shimmer_direction="left_to_right"
    app:shimmer_shape="linear"
    app:shimmer_repeat_count="@integer/material_motion_duration_short_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            tools:context=".ui.fragments.PolicyDetailsFragment">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/plcctExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">
                <View
                    android:layout_width="150dp"
                    android:layout_height="24dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/tvPlc1"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/gray_500"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/plcctExplanation"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:id="@+id/tvPlc2"
                android:layout_width="130pt"
                android:layout_height="15dp"
                android:background="@color/gray_500"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlc1"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:id="@+id/tvPlc3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/gray_500"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlc2"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:id="@+id/tvPlc4"
                android:layout_width="130pt"
                android:layout_height="15dp"
                android:background="@color/gray_500"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlc3"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:id="@+id/tvPlc5"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/gray_500"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlc4"
                app:layout_constraintStart_toStartOf="parent"/>
            <View
                android:id="@+id/tvPlc6"
                android:layout_width="100pt"
                android:layout_height="15dp"
                android:background="@color/gray_500"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlc5"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvPlc6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:id="@+id/tvType"
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctEntity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ctType"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:id="@+id/tvEntity"
                    android:layout_width="200dp"
                    android:layout_height="14dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ctEntity"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:id="@+id/tvNumber"
                    android:layout_width="30dp"
                    android:layout_height="14dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ctNumber"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:id="@+id/tvYear"
                    android:layout_width="50dp"
                    android:layout_height="14dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ctYear"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:id="@+id/tvTitle"
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="4dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ctTitle">

                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:id="@+id/tvSource"
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctAppointedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ctSource"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:id="@+id/tvAppointedAt"
                    android:layout_width="70dp"
                    android:layout_height="14dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ctAppointedAt"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvTheme"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/gray_500">
                    <TextView
                        android:id="@+id/tvTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ctStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/ctTheme"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="150dp"
                    android:layout_height="24dp"
                    android:background="@color/gray_500"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <LinearLayout
                android:id="@+id/ctImpacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/ctStatus"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_500"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_500"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_500"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ctPolicyChangeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/ctImpacts"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="vertical">
                <View
                    android:layout_width="70dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/gray_500"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_500"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_500"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="14dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_500"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>