<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph2"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.demos.ui.fragments.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news"
        app:defaultNavHost="true">
        <action
            android:id="@+id/action_newsFragment_to_saveNewsFragment2"
            app:destination="@id/saveNewsFragment2"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_newsFragment_to_searchNewsFragment"
            app:destination="@id/searchNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.example.demos.ui.fragments.SearchNewsFragment"
        android:label="fragment_search_news"
        tools:layout="@layout/fragment_search_news" />
    <fragment
        android:id="@+id/saveNewsFragment2"
        android:name="com.example.demos.ui.fragments.SaveNewsFragment"
        android:label="fragment_save_news"
        tools:layout="@layout/fragment_save_news" />
</navigation>